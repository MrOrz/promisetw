{
  "name"        : "PPT",
  "version"     : "0.0.0",
  "description" : "Political Promise Tracker",
  "url"         : "https://github.com/g0v/ppt",
  "email"       : "navyblueshellingford@gmail.com",
  "main": "server/server.js",
  "repository"  : {
    "type"      : "git",
    "url"       : "git@github.com:g0v/ppt.git"
  },
  "scripts": {
    "pretest": "jshint .",

    "clean": "rm client/build/*",
    "webpack": "webpack --config client/config/webpack.js --json > tmp/stats.json",

    "jade": "jade $npm_package_config_jade_in --out $npm_package_config_jade_out",
    "jade:watch": "jade --obj '{\"hash\":\"index\"}' -w --pretty $npm_package_config_jade_in --out $npm_package_config_jade_out",

    "watch": "npm run jade:watch",

    "build": "npm run clean && NODE_ENV=production npm run webpack && jade --obj 'tmp/stats.json' $npm_package_config_jade_in --out $npm_package_config_jade_out",
    "deploy:init": "git checkout -b _deploy && echo '!client/build' >> .gitignore",
    "deploy:commit": "_COMMIT_MSG=$(git log -n 1 --pretty=format:'%h - %s') && git add .gitignore client/build && git commit -m \"$_COMMIT_MSG\"",
    "deploy:push": "git push heroku _deploy:master",
    "deploy:cleanup": "git checkout - && git branch -D _deploy",
    "deploy": "npm run deploy:init && npm run build && npm run deploy:commit && npm run deploy:push && npm run deploy:cleanup"
  },
  "config": {
    "jade_in": "client/jade/*.jade",
    "jade_out": "client/build"
  },
  "dependencies": {
    "compression": "^1.0.3",
    "errorhandler": "^1.1.1",
    "loopback": "^2.8.0",
    "loopback-boot": "^2.4.0",
    "loopback-datasource-juggler": "^2.7.0",
    "serve-favicon": "^2.0.1"
  },
  "optionalDependencies": {
    "loopback-explorer": "^1.1.0"
  },
  "devDependencies": {
    "css-loader": "^0.9.0",
    "extract-text-webpack-plugin": "^0.3.5",
    "file-loader": "^0.8.1",
    "jade": "^1.8.2",
    "jshint": "^2.5.6",
    "nib": "^1.0.4",
    "parallelshell": "^1.0.0",
    "stylus": "^0.49.3",
    "stylus-loader": "^0.5.0",
    "webpack": "^1.4.13",
    "webpack-dev-middleware": "^1.0.11"
  },
  "engines": {
    "node": "0.10.x"
  }
}
